{namespace amereta.generator}
{template properties kind="text"}

{@param name: string}
{@param port: string}
{@param hasDataBase: bool}
{@param dbType: string}
{@param dbName: string}

{literal}server:
    port: {/literal}{$port}{literal}
    compression:
        enabled: true
spring:
    application:
        name: {/literal}{$name}{literal}
    jackson:
        serialization:
            indent-output: true
    {/literal}{if $hasDataBase}
