        username: username
        password: password
        hikari:
            poolName: Hikari
            auto-commit: false
    jpa:
        hibernate:
            ddl-auto: none
    liquibase:
        change-log: classpath:db/master.xml{/literal}{/if}{literal}
{/literal}
{/template}